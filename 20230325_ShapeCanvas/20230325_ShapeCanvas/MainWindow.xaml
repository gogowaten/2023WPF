<Window x:Class="_20230325_ShapeCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20230325_ShapeCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="150"/>
    </Grid.ColumnDefinitions>
    <Canvas x:Name="MyCanvs">
      <Rectangle Width="100" Height="50" Fill="DodgerBlue"/>
      
      <local:GeometricCanvas x:Name="MyGeo" Canvas.Left="100" Canvas.Top="50" Background="DodgerBlue" MyIsEditing="False"
                             MyPoints="50,0 0,100 200,0 50,100" MyStroke="Gold" MyStrokeThickness="20"
                             MyAnchorThumbSize="30"/>
    </Canvas>
    <StackPanel Grid.Column="1">
      <Button Content="切り替え" Click="Button_Click"/>
    </StackPanel>
  </Grid>
</Window>
