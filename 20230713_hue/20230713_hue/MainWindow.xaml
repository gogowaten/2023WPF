<Window x:Class="_20230713_hue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20230713_hue"
        xmlns:nume="clr-namespace:ControlLibraryCore20200620;assembly=ControlLibraryCore20200620"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="200"/>
    </Grid.ColumnDefinitions>
    <StackPanel Grid.Column="1">
      <GroupBox Header="色相">
        <StackPanel>
          <nume:NumericUpDown x:Name="NumeHueBase" MyStringFormat="基準 000" MyMinValue="0" MyMaxValue="360" MyValue="10"/>
          <nume:NumericUpDown x:Name="NumeHueMin" MyStringFormat="下限 000" MyMinValue="0" MyMaxValue="{Binding ElementName=NumeHueBase, Path=MyValue}"/>
          <nume:NumericUpDown x:Name="NumeHueMax" MyStringFormat="上限 000" MyMinValue="{Binding ElementName=NumeHueBase, Path=MyValue}" MyMaxValue="360"/>

        </StackPanel>
      </GroupBox>
    </StackPanel>
  </Grid>
</Window>
