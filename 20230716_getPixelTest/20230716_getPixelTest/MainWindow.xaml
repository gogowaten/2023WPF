<Window x:Class="_20230716_getPixelTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20230716_getPixelTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="200"/>
    </Grid.ColumnDefinitions>
    <StackPanel Grid.Column="1">
      <Button Content="test" Click="Button_Click"/>
      <TextBlock x:Name="MyTextBlock"/>
      <Button Content="start" Click="ButtonBegin_Click"/>
      <Button Content="end" Click="ButtonEnd_Click" PreviewMouseDown="Button_PreviewMouseDown"/>
      <TextBlock x:Name="MyTextBlockClicedColor"/>
    </StackPanel>
    </Grid>
</Window>
