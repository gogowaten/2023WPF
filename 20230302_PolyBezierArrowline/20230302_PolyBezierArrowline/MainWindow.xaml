<Window x:Class="_20230302_PolyBezierArrowline.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20230302_PolyBezierArrowline"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <Canvas>
      <local:PolyBezierArrowline Points="0,0 0,150 100,50 100,200" StrokeThickness="60"
                                 IsBezier="True"
                                 HeadBeginType="Arrow" HeadEndType="Arrow" Stroke="SeaGreen"/>

      <local:PolyBezierArrowline Points="0,0 0,150 100,50 100,200" StrokeThickness="20"
                                 IsBezier="False"
                                 HeadBeginType="Arrow" HeadEndType="Arrow" Stroke="DarkMagenta"
                                 Canvas.Left="200"/>
    </Canvas>
  </Grid>
</Window>
